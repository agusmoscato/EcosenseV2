<script>
// Modal handlers
document.addEventListener('DOMContentLoaded', () => {
  const createSensorModal = document.getElementById('createSensorModal');
  const openBtn = document.getElementById('open-create-sensor-modal');
  const closeBtn = document.getElementById('close-create-sensor-modal');

  if (openBtn && createSensorModal) openBtn.addEventListener('click', () => createSensorModal.showModal());
  if (closeBtn && createSensorModal) closeBtn.addEventListener('click', () => createSensorModal.close());
});

let allSensors = [], allNodes = [], currentFilter = 'all';

async function loadNodes() {
  try {
    const res = await fetch('/api/nodes');
    allNodes = await res.json();
    const select = document.getElementById('sensor-node-id');
    select.innerHTML = '<option value="">Selecciona un nodo...</option>' + allNodes.map(n => `<option value="${n.id}">${n.name}</option>`).join('');
    const filterDiv = document.getElementById('node-filter-buttons');
    filterDiv.innerHTML = allNodes.map(n => `<button style="padding:6px 14px;border-radius:12px;border:1px solid #00796b;background:white;color:#00796b;font-weight:600;cursor:pointer;" onclick="filterBySensor(${n.id})">${n.name}</button>`).join('');
  } catch(e){console.error(e);}
}

async function loadSensors(){
  try{
    const res=await fetch('/api/sensors');
    allSensors=await res.json();
    renderSensors();
  }catch(e){console.error(e);document.getElementById('sensors-tbody').innerHTML='<tr><td colspan="6" style="text-align:center; color:#dc2626; padding:20px;">Error cargando sensores</td></tr>';}
}

function renderSensors(){
  const tbody=document.getElementById('sensors-tbody'), empty=document.getElementById('empty-state');
  let filtered=currentFilter==='all'?allSensors:allSensors.filter(s=>s.node_id==currentFilter);
  if(!filtered.length){tbody.innerHTML='';empty.style.display='block';return;}
  empty.style.display='none';
  tbody.innerHTML=filtered.map(s=>{
    const node=allNodes.find(n=>n.id==s.node_id);
    const icons={'temperature':'ğŸŒ¡ï¸','humidity':'ğŸ’§','co2':'ğŸŒ«ï¸','light':'ğŸ’¡','pressure':'ğŸ”‹','soil_moisture':'ğŸŒ±','air_quality':'ğŸ’¨','custom':'âš™ï¸'};
    return `<tr style="transition:0.2s; cursor:pointer;">
      <td style="padding:12px; font-weight:600;">${icons[s.type]||''} ${s.type}</td>
      <td style="padding:12px;">${node?node.name:'N/A'}</td>
      <td style="padding:12px;">${s.unit||'-'}</td>
      <td style="padding:12px; color:#555;">${s.description||'-'}</td>
      <td style="padding:12px;"><span style="padding:4px 8px;border-radius:12px;border:1px solid #ccc;">Ver</span></td>
      <td style="padding:12px; display:flex; gap:6px;">
        <button onclick="editSensor(${s.id})" style="padding:6px 12px;border-radius:12px;border:none;background:#e0f7fa;color:#00796b;font-weight:600;cursor:pointer;">âœï¸ Editar</button>
        <button onclick="deleteSensor(${s.id})" style="padding:6px 12px;border-radius:12px;border:none;background:#fef2f2;color:#dc2626;font-weight:600;cursor:pointer;">ğŸ—‘ï¸ Eliminar</button>
      </td>
    </tr>`;
  }).join('');
}

function filterBySensor(filter){currentFilter=filter; renderSensors();}

document.getElementById('create-sensor-form').addEventListener('submit', async e=>{
  e.preventDefault();
  const type=document.getElementById('sensor-type').value, node_id=document.getElementById('sensor-node-id').value;
  const unit=document.getElementById('sensor-unit').value||null, description=document.getElementById('sensor-description').value||null;
  try{
    const res=await fetch('/api/sensors',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({type,node_id,unit,description})});
    if(res.ok){
      document.getElementById('create-sensor-form').reset();
      document.getElementById('createSensorModal').close();
      loadSensors();
      const alert=document.createElement('div');
      alert.style.cssText="position:fixed;bottom:20px;right:20px;padding:12px 20px;background:#26c6da;color:white;border-radius:14px;box-shadow:0 12px 30px rgba(0,0,0,0.2);font-weight:600;";
      alert.textContent="âœ… Sensor creado exitosamente";
      document.body.appendChild(alert);
      setTimeout(()=>alert.remove(),3000);
    }else{
      const err=await res.json();
      alert(`Error: ${err.error||'No se pudo crear el sensor'}`);
    }
  }catch(e){console.error(e);alert('Error al crear el sensor');}
});

function deleteSensor(id){
  if(confirm('Â¿EstÃ¡s seguro de que quieres eliminar este sensor?')){
    fetch(`/api/sensors/${id}`,{method:'DELETE'}).then(()=>{
      loadSensors();
      const alert=document.createElement('div');
      alert.style.cssText="position:fixed;bottom:20px;right:20px;padding:12px 20px;background:#f59e0b;color:white;border-radius:14px;box-shadow:0 12px 30px rgba(0,0,0,0.2);font-weight:600;";
      alert.textContent="â„¹ï¸ Sensor eliminado correctamente";
      document.body.appendChild(alert);
      setTimeout(()=>alert.remove(),3000);
    });
  }
}

function editSensor(id){alert('EdiciÃ³n de sensores en desarrollo');}

loadNodes();
loadSensors();
</script>
